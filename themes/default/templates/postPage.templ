package templates

import (
	"peterszarvas94/blog/pkg"
	"fmt"
	"peterszarvas94/blog/config"
)

templ PostPage(post *pkg.FileData) {
	@page(postBody(post))
}

templ postBody(post *pkg.FileData) {
	<body>
		@header()
		<main class="page post-page">
			<h1>{ post.Matter.Title }</h1>
			<time>{ post.DateTime.Format(fmt.Sprintf("%s %s", config.DateLayout, config.TimeLayout)) }</time>
			@category(post.Matter.Category)
			<div class="tags">
				<ul>
					for _, tag := range post.Matter.Tags {
						<li>
							<a href={ templ.SafeURL(fmt.Sprintf("/tag/%s", tag)) }>
								{ fmt.Sprintf("# %s", tag) }
							</a>
						</li>
					}
				</ul>
			</div>
			<article class="markdown-body">
				@pkg.HtmlString(post.Html)
			</article>
		</main>
	</body>
}
