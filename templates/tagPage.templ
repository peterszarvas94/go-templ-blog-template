package templates

import (
	"peterszarvas94/blog/pkg"
	"fmt"
)

templ TagPage(tag string, files []*pkg.FileData) {
	@head()
	@tagBody(tag, files)
}

templ tagBody(tag string, files []*pkg.FileData) {
	<body>
		@header()
		<main class="page tag-page">
			<h1>
				<div>{ fmt.Sprintf("# %s", tag) }</div>
			</h1>
			@articleList(files)
		</main>
		@footer()
	</body>
}
